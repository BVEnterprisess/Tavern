{
  "name": "table1837-bar-management",
  "version": "1.0.0",
  "description": "Bar Management System for Table 1837 at Glen Rock Mill Inn",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run build:css && npm run build:js && npm run copy-html",
    "build:css": "postcss src/css/main.css -o dist/css/main.css",
    "build:js": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "npm run build:css && webpack --mode=production --optimize-minimize",
    "analyze": "webpack --mode=production --analyze",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,css,html}",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "copy-html": "copy index.html dist\\ && copy sw.js dist\\",
    "deploy": "npm run build && npm test && npm run lint && git add . && git commit -m \"Auto-deploy: $(date)\" && git push origin main",
    "deploy:prod": "npm run build:prod && npm test && npm run lint && git add . && git commit -m \"Production deploy: $(date)\" && git push origin main",
    "security:audit": "npm audit && npm audit fix",
    "performance:check": "npm run analyze",
    "health:check": "npm run test && npm run lint && npm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "axios": "^1.6.0",
    "tesseract.js": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/mcp": "^0.0.32",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.0",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "live-server": "^1.2.2",
    "playwright": "^1.55.0-alpha-1752701791000",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^9.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.10",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.0"
  },
  "keywords": [
    "bar-management",
    "inventory",
    "restaurant",
    "table1837"
  ],
  "author": "John Patrick",
  "license": "PROPRIETARY"
}
